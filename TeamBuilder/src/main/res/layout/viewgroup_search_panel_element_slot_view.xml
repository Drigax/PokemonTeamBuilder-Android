<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_panel_element_slot_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/search_panel_element_slot_icon_error" />

    <com.drigax.teambuilder.view_code_behind.controls.FontTextView
        android:id="@+id/search_panel_element_slot_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:typeface="helveticaNeueCondensed"
        android:textSize="13dp"
        android:lines="1"
        android:gravity="center_horizontal"
        android:text="Error Element"/>
</LinearLayout>