<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/team_builder_background"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_columnSpan="3"
        android:layout_row="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.drigax.teambuilder.view_code_behind.controls.SlotView
                android:id="@+id/pokemonSlot0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/team_view_slot_weight"
                android:clickable="true"
                android:onClick="onPokemonSlot_click"
                custom:slotId="0" />

            <com.drigax.teambuilder.view_code_behind.controls.SlotView
                android:id="@+id/pokemonSlot1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/team_view_slot_weight"
                android:clickable="true"
                android:onClick="onPokemonSlot_click"
                custom:slotId="1" />

            <com.drigax.teambuilder.view_code_behind.controls.SlotView
                android:id="@+id/pokemonSlot2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/team_view_slot_weight"
                android:clickable="true"
                android:onClick="onPokemonSlot_click"
                custom:slotId="2" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.drigax.teambuilder.view_code_behind.controls.SlotView
                android:id="@+id/pokemonSlot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onPokemonSlot_click"
                custom:slotId="3" />

            <com.drigax.teambuilder.view_code_behind.controls.SlotView
                android:id="@+id/pokemonSlot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onPokemonSlot_click"
                custom:slotId="4" />

            <com.drigax.teambuilder.view_code_behind.controls.SlotView
                android:id="@+id/pokemonSlot5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onPokemonSlot_click"
                custom:slotId="5" />


        </LinearLayout>
    </LinearLayout>



</LinearLayout>